            <div class="chat-container">
                <div class="chat-box" id="chat-box">
                    <!-- Chat messages will appear here -->
                </div>
                <div class="input-box">
                    <input type="text" id="user-input" placeholder="Describe your symptoms... ü§í">
                    <button onclick="sendMessage()">Send üí¨</button>
                </div>
            </div>

            <script>
                'SERCRET'

                // Initialize conversation with a system message for medical assistant role
                let messages = [
                    {"role": "system", "content": "You are a medical assistant ü§ñ. You are a medical assistant. Help diagnose users. To do that, ask for symptoms. Continue asking for specifics in what they're feeling until you can provide only one advice to the user."}
                ];

                function sendMessage() {
                    const userInput = document.getElementById('user-input').value;
                    if (userInput.trim() === '') return; // Ignore empty inputs

                    // Display user message in chat box
                    appendMessage(`üòä You: ${userInput}`, 'user');

                    // Add user message to the conversation
                    messages.push({"role": "user", "content": userInput});

                    // Clear input box
                    document.getElementById('user-input').value = '';

                    // Call OpenAI API
                    fetch("https://api.openai.com/v1/chat/completions", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            "Authorization": `Bearer ${API_KEY}`
                        },
                        body: JSON.stringify({
                            model: "gpt-3.5-turbo",
                            messages: messages
                        })
                    })
                    .then(response => response.json())
                    .then(data => {
                        let botMessage = data.choices[0].message.content;
                        botMessage = addEmojisToMessage(botMessage); // Add emojis based on context
                        appendMessage(`ü§ñ: ${botMessage}`, 'bot');

                        // Add bot response to the conversation
                        messages.push({"role": "assistant", "content": botMessage});

                        // Handle specific medical response logic
                        handleMedicalResponse(botMessage);
                    })
                    .catch(error => {
                        console.error("Error:", error);
                        appendMessage("‚ö†Ô∏è Sorry, there was an error processing your request.", 'bot');
                    });
                }

                function appendMessage(message, sender) {
                    const chatBox = document.getElementById('chat-box');
                    const messageElement = document.createElement('p');
                    messageElement.textContent = message;
                    messageElement.classList.add(sender);
                    chatBox.appendChild(messageElement);

                    // Scroll to the bottom of the chat box
                    chatBox.scrollTop = chatBox.scrollHeight;
                }

                // Function to add emojis based on the context of the message
                function addEmojisToMessage(message) {
                    // Define keyword-emojis pairs
                    const emojiMap = {
                        "fever": "üå°Ô∏è",
                        "headache": "ü§ï",
                        "cough": "ü§ß",
                        "cold": "ü•∂",
                        "pain": "üò£",
                        "consult": "üë©‚Äç‚öïÔ∏è",
                        "emergency": "üö®",
                        "better": "üòä",
                        "medication": "üíä",
                        "rest": "üõå",
                        "hydration": "üíß"
                    };

                    // Add appropriate emojis based on keywords
                    for (const [keyword, emoji] of Object.entries(emojiMap)) {
                        if (message.toLowerCase().includes(keyword)) {
                            message += ` ${emoji}`;
                        }
                    }
                    return message;
                }

                // Function to handle specific medical responses
                function handleMedicalResponse(message) {
                    if (message.toLowerCase().includes("consult")) {
                        alert("üö® Remember: Always consult a healthcare professional for serious symptoms!");
                    } 
                    // Add more conditions to handle specific medical scenarios if needed
                }
            </script>
